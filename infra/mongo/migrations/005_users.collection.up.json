[
    {
        "create": "users",
        "validator": {
            "$jsonSchema": {
                "bsonType": "object",
                "required": [
                    "username",
                    "full_name",
                    "email",
                    "password",
                    "phone_number",
                    "created_on",
                    "updated_on",
                    "deleted_on"
                ],
                "properties": {
                    "username": {
                        "bsonType": "string"
                    },
                    "full_name": {
                        "bsonType": "string"
                    },
                    "email": {
                        "bsonType": "string"
                    },
                    "password": {
                        "bsonType": "string",
                        "description": "hashed password"
                    },
                    "phone_number": {
                        "bsonType": "string"
                    },
                    "created_on": {
                        "bsonType": "date",
                        "description": "creation date time(UTC) of document"
                    },
                    "updated_on": {
                        "bsonType": [
                            "date",
                            "null"
                        ],
                        "description": "last updated date time(UTC) of document"
                    },
                    "deleted_on": {
                        "bsonType": [
                            "date",
                            "null"
                        ],
                        "description": "deleted date time(UTC) of document. Used to mark document as soft-deleted"
                    }
                }
            }
        }
    }
]